---
import EmailSignup from './Subscribe/EmailSignup.astro'

export interface Props {
  title: string;
  date: string;
  hero: string;
  youtube: string;
}

const { title, date, hero, youtube } = Astro.props;
---

<article class="max-w-5xl lg:mx-auto lg:px-3">
  <header class="mx-auto max-w-3xl text-center content">
    <h1>{title}</h1>
  </header>

  <!-- Image -->
  {hero && <img class="lg:rounded-xl mx-auto" style="min-width: 80%;" loading="lazy" src={hero} alt={title} />}


  <!-- Content -->
  <section class="lg:max-w-3xl mx-auto py-6 lg:py-12 content">
    <slot />
  </section>

  <!--<EmailSignup />-->
</article>
